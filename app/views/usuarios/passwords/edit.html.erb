<div class="col-sm-12">
    <h2><%= I18n.t 'change_edit_pass' %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    
      <%= f.hidden_field :reset_password_token %>
    
      <div class="field">
        <%= f.label :password, "Nova senha" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= I18n.t 'character_edit_pass' %>)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, "Confirmar nova senha" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Mudar minha senha" %>
      </div>
    <% end %>
    
    <%= render "usuarios/shared/links" %>
    
</div>